#!/bin/bash

set +x

while true; do
  make
  make_result=$?
  server_pid=0
  if [ $make_result -eq 0 ]; then
    make serve &
    server_pid=$!
    echo "Server started as PID $server_pid"
  fi

  echo "Watching directory for changes..."
  fswatch -1 .

  if [ $server_pid -gt 0 ]; then
    kill $server_pid
  fi
done
